# DotEnv Example file for All Environments
#
# This file contains working example values for local development
# Copy and modify as needed for your environment
#
# Framework Configuration
RAILS_VERSION=8.0.3

# Security - NEVER use this secret in production!
# Generate new with: rails secret
SECRET_KEY_BASE=EXAMPLE-SECRET-KEY-FOR-DEVELOPMENT-ONLY-0000000000000000000000000000000000000000

# Application Settings
RAILS_HOST=localhost:3000

# Database Configuration (for local development with Docker)
DATABASE_POOL=
DATABASE_HOST=psql
DATABASE_USER=postgres
DATABASE_NAME=rails_start_default
DATABASE_PASSWORD=qwerty

# Shell History Settings (for Docker container)
HISTSIZE=10000
HISTFILESIZE=20000

# IRB/Rails Console History
IRB_HISTORY_FILE=/home/rails/RailsApp/tmp/.irb_history
IRB_HISTORY_SIZE=1000

# Rails Console IRB config
# See: Makefiles/100_Project.mk:project-setup-irb-config
IRBRC=/home/rails/RailsApp /tmp/.irbrc
# ENV['IRB_HISTORY_FILE'] = '/home/rails/RailsApp/tmp/.irb_history'
# ENV['IRB_SAVE_HISTORY'] = '1000'
# ENV['IRB_AUTO_INDENT'] = 'true'

# Memory Allocator
# Use jemalloc for better performance
# LD_PRELOAD="/usr/lib/libjemalloc.so.2"

# Bundler Settings
# Install gems to the application directory
# To have a better control over gem versions per project
BUNDLE_PATH=/home/rails/RailsApp/vendor/bundle
BUNDLE_DISABLE_SHARED_GEMS=true
BUNDLE_NO_CACHE=false

# Static Files
RAILS_SERVE_STATIC_FILES=true

# Application Admin (example credentials)
ADMIN_EMAIL=admin@rails-start.com
ADMIN_PASSWORD=qwerty123